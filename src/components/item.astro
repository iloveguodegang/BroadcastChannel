---
import '../assets/item.css'
import 'prismjs/themes/prism.css'
import dayjs from '../lib/dayjs'
import { getEnv } from '../lib/env'
import { getComments } from '../lib/telegram/comments'

const locale = getEnv(import.meta.env, Astro, 'LOCALE')
const timezone = getEnv(import.meta.env, Astro, 'TIMEZONE')

locale && dayjs.locale(locale)

const { SITE_URL } = Astro.locals
const { post } = Astro.props
const channelName = getEnv(import.meta.env, Astro, 'CHANNEL')
const enableComments = getEnv(import.meta.env, Astro, 'ENABLE_EXPERIMENTAL_COMMENTS') === 'true'
const comments = enableComments ? await getComments(Astro, { id: post.id, limit: 60 }) : { images: [] }

const datetime = dayjs(post.datetime).tz(timezone)
const timeago = datetime.isBefore(dayjs().subtract(1, 'w'))
  ? datetime.format('HH:mm · ll · ddd')
  : datetime.fromNow()
---

<div class="item" style={{ 'view-transition-name': `post-${post.id}` }}>
  <div class="time-box">
    <div class="dot"></div>
    <div class="time">
      <a
        href={`${SITE_URL}posts/${post.id}`}
        title={post.datetime}
        class="item-link">{timeago}</a
      >
    </div>
  </div>
  {
    post.content.length > 0 && (
      <div class={`text-box content`} set:html={post.content} />
    )
  }
  {
    post.tags.length > 0 && (
      <div
        class="tag-box"
        style={post.content.length === 0 ? 'padding-top: 30px;' : ''}
      >
        <div class="tag-icon" />
        {post.tags.map((tag) => (
          <a href={`/search/%23${tag}`} title={tag} class="tag">
            {tag}
          </a>
        ))}
      </div>
    )
  }
  {
    channelName && (
      <div class="pages-container">
        <div class="pages-info"></div>
        <a
          href={`https://t.me/${channelName}/${post.id}`}
          title="展开更多"
          class="page"
          target="_blank"
          rel="noopener"
        >
          展开更多
        </a>
      </div>
    )
  }
  {
    enableComments && comments?.images?.length > 0 && (
      <details class="comments-wrap">
        <summary>展开评论图片（{comments.images.length}）</summary>
        <div class="image-box">
          {comments.images.map((src) => (
            <img src={src} alt={`comment image ${post.id}`} loading="lazy" />
          ))}
        </div>
      </details>
    )
  }
</div>
