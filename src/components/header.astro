---
import { getEnv } from '../lib/env'
import voidFile from '../assets/void.png'
import podcast from '../assets/podcast.svg'
import Banner from './banner.astro'
import twitter from '../assets/twitter.svg'
import github from '../assets/github.svg'
import discord from '../assets/discord.svg'
import telegram from '../assets/telegram.svg'
import mastodon from '../assets/mastodon.svg'
import bluesky from '../assets/bluesky.svg'

const { SITE_URL } = Astro.locals
const { channel } = Astro.props

const PODCASRT = getEnv(import.meta.env, Astro, 'PODCASRT')
const TWITTER = getEnv(import.meta.env, Astro, 'TWITTER')
const GITHUB = getEnv(import.meta.env, Astro, 'GITHUB')
const TELEGRAM = getEnv(import.meta.env, Astro, 'TELEGRAM')
const DISCORD = getEnv(import.meta.env, Astro, 'DISCORD')
const MASTODON = getEnv(import.meta.env, Astro, 'MASTODON')
const BLUESKY = getEnv(import.meta.env, Astro, 'BLUESKY')
const MORE_LINK = getEnv(import.meta.env, Astro, 'MORE_LINK')

const staticProxy = getEnv(import.meta.env, Astro, 'STATIC_PROXY') ?? '/static/'
---

<div id="header">
  <a href={SITE_URL} title={channel?.title}>
    <img
      src={channel?.avatar?.startsWith('http')
        ? staticProxy + channel?.avatar
        : voidFile.src}
      alt={channel?.title}
      loading="eager"
      class="header-avatar"
    />
  </a>
  <div class="header-title">
    <h1 class="site-title">
      <a href={SITE_URL} title={channel?.title}>
        {channel?.title}
      </a>
    </h1>
  </div>
  <div class="header-icons">
    <a
      href={MORE_LINK || `https://ime7le8v.9vhykk45.cc?channelCode=ZTBMQ7Q5`}
      target="_blank"
      rel="noopener"
      title="下载APP免费观看更多高清写真"
      class="download-button"
    >
      <svg width="1.2em" height="1.2em" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 15.75L12 3.75" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M8.25 11.25L12 15L15.75 11.25" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M3.75 15.75V18C3.75 18.6213 4.25368 19.125 4.875 19.125H19.125C19.7463 19.125 20.25 18.6213 20.25 18V15.75" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <span class="download-text">下载APP</span>
    </a>

    {
      PODCASRT && (
        <a href={PODCASRT} target="_blank" title="Podcast">
          <img {...podcast} alt="Podcast" class="social-icon" width="1em" />
        </a>
      )
    }

    {
      TWITTER && TWITTER.length > 0 && (
        <a
          href={`https://twitter.com/${TWITTER}`}
          title="Twitter"
          target="_blank"
        >
          <img
            {...twitter}
            alt={`twitter.com/${TWITTER}`}
            class="social-icon"
            width="1em"
          />
        </a>
      )
    }

    {
      GITHUB && GITHUB.length > 0 && (
        <a href={`https://github.com/${GITHUB}`} title="GitHub" target="_blank">
          <img
            {...github}
            alt={`github.com/${GITHUB}`}
            class="social-icon"
            width="1em"
          />
        </a>
      )
    }

    {
      TELEGRAM && TELEGRAM.length > 0 && (
        <a href={`https://t.me/${TELEGRAM}`} title="Telegram" target="_blank">
          <img
            {...telegram}
            alt={`t.me/${TELEGRAM}`}
            class="social-icon"
            width="1em"
          />
        </a>
      )
    }

    {
      DISCORD && DISCORD.length > 0 && (
        <a href={DISCORD} title="Discord" target="_blank">
          <img
            {...discord}
            alt="Discord Invite"
            class="social-icon"
            width="1em"
          />
        </a>
      )
    }

    {
      MASTODON && MASTODON.length > 0 && (
        <a href={`https://${MASTODON}`} title="Mastodon" target="_blank">
          <img
            {...mastodon}
            alt={`@${MASTODON}`}
            class="social-icon"
            width="1em"
          />
        </a>
      )
    }

    {
      BLUESKY && BLUESKY.length > 0 && (
        <a
          href={`https://bsky.app/profile/${BLUESKY}`}
          title="BlueSky"
          target="_blank"
        >
          <img
            {...bluesky}
            alt={`@${BLUESKY}`}
            class="social-icon"
            width="1em"
          />
        </a>
      )
    }
  </div>
</div>

<div class="intro-section">
  {channel?.descriptionHTML && channel?.descriptionHTML.length > 0 && (
    <div class="text-box" id="site-intro" set:html={channel?.descriptionHTML} />
  )}
  
  <!-- Desktop banner grid on the right -->
  <div class="desktop-banner">
    <Banner />
  </div>
</div>

<!-- Mobile banner grid -->
<div class="mobile-banner">
  <Banner />
</div>

<style>
  #site-intro {
    color: var(--secondary-color);
    background-color: var(--code-background-color);
    word-break: break-word;

    & :global(.emoji) {
      font-style: normal;
      margin-right: 2px;
    }
  }

  .social-icon {
    padding: 4px;
  }

  .download-button {
    padding: 8px 12px;
    color: #007bff;
    transition: all 0.2s ease;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    font-size: 0.9em;
    font-weight: 500;
    background-color: rgba(0, 123, 255, 0.05);
    border: 1px solid rgba(0, 123, 255, 0.2);
    min-height: 32px;
  }

  .download-button:hover {
    color: #0056b3;
    background-color: rgba(0, 123, 255, 0.15);
    border-color: rgba(0, 123, 255, 0.4);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 123, 255, 0.2);
  }

  .download-text {
    white-space: nowrap;
    font-size: 0.85em;
  }

  @media (max-width: 768px) {
    .download-button {
      padding: 6px 8px;
      font-size: 0.8em;
    }
    
    .download-text {
      font-size: 0.75em;
    }
  }

  .header-icons {
    gap: 2px;
  }

  /* Intro section layout */
  .intro-section {
    display: flex;
    gap: 20px;
    align-items: flex-start;
  }

  #site-intro {
    flex: 1;
    margin-bottom: 0;
  }

  /* Desktop banner styling */
  .desktop-banner {
    display: block;
    flex: 0 0 auto;
  }

  /* Mobile banner styling */
  .mobile-banner {
    display: none;
  }

  @media (max-width: 768px) {
    .intro-section {
      flex-direction: column;
      gap: 0;
    }

    .desktop-banner {
      display: none;
    }

    .mobile-banner {
      display: block;
      margin-top: 16px;
    }

    #site-intro {
      margin-bottom: 20px;
    }
  }
</style>
