---
// Banner component for displaying icon grid
// Static icon configuration
const icons = [
  {
    name: "JVID官方",
    icon: "jvid-official.svg",
    link: "https://example.com",
    order: 1
  },
  {
    name: "高清写真",
    icon: "hd-photos.svg",
    link: "https://example.com",
    order: 2
  },
  {
    name: "会员专区",
    icon: "vip-zone.svg",
    link: "https://example.com",
    order: 3
  },
  {
    name: "最新视频",
    icon: "new-videos.svg",
    link: "https://example.com",
    order: 4
  },
  {
    name: "热门推荐",
    icon: "hot-recommend.svg",
    link: "https://example.com",
    order: 5
  },
  {
    name: "免费观看",
    icon: "free-watch.svg",
    link: "https://example.com",
    order: 6
  }
]

const { SITE_URL } = Astro.locals
---

<div class="banner-grid">
  {icons.map((icon) => (
    <a 
      href={icon.link} 
      target="_blank" 
      rel="noopener"
      class="banner-item"
      title={icon.name}
    >
      <div class="banner-icon">
        <img 
          src={`/banner/icons/${icon.icon}`}
          alt={icon.name}
          loading="lazy"
        />
      </div>
      <div class="banner-name">{icon.name}</div>
    </a>
  ))}
</div>

<style>
  .banner-grid {
    display: none; /* Hidden on mobile, shown on desktop */
    grid-template-columns: repeat(2, 1fr);
    gap: 8px;
    padding: 12px;
    background-color: var(--cell-background-color);
    border-radius: var(--box-border-radius);
    border: 1px solid var(--border-color);
    margin-bottom: 16px;
    box-shadow: var(--shadows);
    width: 200px;
    min-height: 200px;
  }

  @media (min-width: 769px) {
    .banner-grid {
      display: grid; /* Show on desktop */
    }
  }

  .banner-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: var(--foreground-color);
    transition: all 0.2s ease;
    padding: 8px;
    border-radius: 6px;
  }

  .banner-item:hover {
    background-color: rgba(0, 0, 0, 0.05);
    transform: translateY(-2px);
  }

  .banner-icon {
    width: 40px;
    height: 40px;
    margin-bottom: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .banner-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 4px;
  }

  .banner-name {
    font-size: 0.75em;
    text-align: center;
    line-height: 1.2;
    max-width: 100%;
    word-break: break-word;
    color: var(--secondary-color);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .banner-grid {
      display: flex !important; /* Override desktop hidden state */
      gap: 8px;
      overflow-x: auto;
      padding: 12px;
      grid-template-columns: none;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: thin;
    }

    .banner-grid::-webkit-scrollbar {
      height: 4px;
    }

    .banner-grid::-webkit-scrollbar-track {
      background: var(--border-color);
      border-radius: 2px;
    }

    .banner-grid::-webkit-scrollbar-thumb {
      background: var(--secondary-color);
      border-radius: 2px;
    }

    .banner-item {
      flex-shrink: 0;
      width: 60px;
      padding: 6px;
    }

    .banner-icon {
      width: 40px;
      height: 40px;
      margin-bottom: 4px;
    }

    .banner-name {
      font-size: 0.7em;
    }
  }
</style>
