---
// Banner component for displaying icon grid
// Reads icon configuration from banner folder
import { readFileSync, readdirSync } from 'fs'
import { join } from 'path'

// Read icon configuration
const bannerPath = join(process.cwd(), 'src/banner')
let icons = []

try {
  const iconsFile = readFileSync(join(bannerPath, 'icons.md'), 'utf-8')
  
  // Parse icons from markdown
  const iconBlocks = iconsFile.split(/## Icon \d+/).slice(1)
  
  icons = iconBlocks.map((block, index) => {
    const lines = block.trim().split('\n')
    const icon = { order: index + 1 }
    
    lines.forEach(line => {
      if (line.includes('**Name**:')) {
        icon.name = line.split('**Name**:')[1].trim()
      } else if (line.includes('**Icon**:')) {
        icon.icon = line.split('**Icon**:')[1].trim()
      } else if (line.includes('**Link**:')) {
        icon.link = line.split('**Link**:')[1].trim()
      } else if (line.includes('**Order**:')) {
        icon.order = parseInt(line.split('**Order**:')[1].trim())
      }
    })
    
    return icon
  }).filter(icon => icon.name && icon.icon && icon.link)
  
  // Sort by order
  icons.sort((a, b) => a.order - b.order)
} catch (error) {
  console.warn('Could not read banner icons:', error)
  icons = []
}

const { SITE_URL } = Astro.locals
---

<div class="banner-grid">
  {icons.map((icon) => (
    <a 
      href={icon.link} 
      target="_blank" 
      rel="noopener"
      class="banner-item"
      title={icon.name}
    >
      <div class="banner-icon">
        <img 
          src={`${SITE_URL}banner/icons/${icon.icon}`}
          alt={icon.name}
          loading="lazy"
        />
      </div>
      <div class="banner-name">{icon.name}</div>
    </a>
  ))}
</div>

<style>
  .banner-grid {
    display: none; /* Hidden on mobile, shown on desktop */
    grid-template-columns: repeat(3, 1fr);
    gap: 12px;
    padding: 16px;
    background-color: var(--cell-background-color);
    border-radius: var(--box-border-radius);
    border: 1px solid var(--border-color);
    margin-bottom: 16px;
    box-shadow: var(--shadows);
  }

  @media (min-width: 769px) {
    .banner-grid {
      display: grid; /* Show on desktop */
    }
  }

  .banner-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: var(--foreground-color);
    transition: all 0.2s ease;
    padding: 8px;
    border-radius: 6px;
  }

  .banner-item:hover {
    background-color: rgba(0, 0, 0, 0.05);
    transform: translateY(-2px);
  }

  .banner-icon {
    width: 48px;
    height: 48px;
    margin-bottom: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .banner-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 4px;
  }

  .banner-name {
    font-size: 0.75em;
    text-align: center;
    line-height: 1.2;
    max-width: 100%;
    word-break: break-word;
    color: var(--secondary-color);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .banner-grid {
      display: flex !important; /* Override desktop hidden state */
      gap: 8px;
      overflow-x: auto;
      padding: 12px;
      grid-template-columns: none;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: thin;
    }

    .banner-grid::-webkit-scrollbar {
      height: 4px;
    }

    .banner-grid::-webkit-scrollbar-track {
      background: var(--border-color);
      border-radius: 2px;
    }

    .banner-grid::-webkit-scrollbar-thumb {
      background: var(--secondary-color);
      border-radius: 2px;
    }

    .banner-item {
      flex-shrink: 0;
      width: 60px;
      padding: 6px;
    }

    .banner-icon {
      width: 40px;
      height: 40px;
      margin-bottom: 4px;
    }

    .banner-name {
      font-size: 0.7em;
    }
  }
</style>
